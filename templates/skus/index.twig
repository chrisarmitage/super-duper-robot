{% extends 'base.twig' %}

{% block title %}View Skus{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s9">
        {% for sku in skus %}

                <div class="col s6 m3">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{ sku.title }}</span>
                            <p>Excerpt / brief description of the product</p>
                        </div>
                        <div class="card-action">
                            <a href="/skus/view/{{ sku.code }}">View</a>
                        </div>
                    </div>
                </div>
        {% endfor %}
        </div>

        <div class="col m3">
            <p>Basket</p>
            <p>Total: <strong>{{ basket.total }}</strong></p>
            <table>
                {% for item in basket.items %}
                    <tr>
                        <td>{{ item.title }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.price }}</td>
                        <td>
                            <a href="/basket/remove/{{ item.id }}">
                                <i class="material-icons">remove_circle</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            {% if basket.items | length > 0 %}
                <a href="/checkout" class="waves-effect waves-light btn">Checkout</a>
            {% endif %}
        </div>
    </div>

{% endblock %}
