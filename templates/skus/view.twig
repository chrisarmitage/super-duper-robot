{% extends 'base.twig' %}

{% block title %}View {{ sku.title }}{% endblock %}

{% block content %}
    <a href="/skus" class="waves-effect waves-light btn-flat">View all</a>

    <table>
        <tr>
            <td>Title</td>
            <td>{{ sku.title }}</td>
        </tr>
        <tr>
            <td>Code</td>
            <td>{{ sku.code }}</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>{{ sku.price }}</td>
        </tr>
    </table>

{% endblock %}
